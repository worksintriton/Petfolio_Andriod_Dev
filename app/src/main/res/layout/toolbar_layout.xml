<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/AppTheme.NoActionBar"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    android:popupMenuStyle = "@style/popupMenuStyle"
    android:textAppearanceLargePopupMenu="@style/myPopupMenuTextAppearanceSmall"
    app:popupTheme="@style/popupMenuStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="left"
            android:background="@drawable/ic_right"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/tvHeaderIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@drawable/drawer_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLanguage">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text="Welcome"
                    android:layout_marginLeft="@dimen/big_margin_value" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:id="@+id/btnnotificationspatient"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/ic_baseline_notifications_none_24_black"
                        android:layout_marginRight="20dp"/>
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>