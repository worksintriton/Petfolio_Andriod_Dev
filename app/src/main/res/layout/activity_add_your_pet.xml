<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futur"
            android:text="@string/addyourpet"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futur"
            android:text="@string/skip"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/edt_petname"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futur"
                    android:hint="@string/pet_name"
                    tools:ignore="Autofill,LabelFor"
                    android:textColor="@color/green"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/edt_petgender"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futur"
                    android:hint="@string/pet_gender"
                    tools:ignore="Autofill,LabelFor"
                    android:textColor="@color/green"
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/edt_petcolor"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futur"
                    android:hint="@string/pet_color"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:textColor="@color/green"
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/edt_petweight"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futur"
                    android:hint="@string/pet_weight"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:textColor="@color/green"
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/edt_petage"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futur"
                    android:hint="@string/pet_age"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:textColor="@color/green"
                    android:inputType="text"
                    />



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:text="Continue"
            android:textColor="@color/whiteFive"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:fontFamily="@font/futur"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


</RelativeLayout>