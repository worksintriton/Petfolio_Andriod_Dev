<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/addyourpet"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/skip"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:fillViewport="true"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/edt_petname"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futuramediumbt"
                    android:hint="@string/pet_name"
                    tools:ignore="Autofill,LabelFor"
                    android:textColor="@color/green"
                    android:inputType="text"
                    android:maxLength="25"
                    android:textColorHint="@color/green"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/sprpettype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/sprpetbreed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/sprpetgender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/sprpetcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_petweight"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futuramediumbt"
                    android:hint="@string/pet_weight"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:textColor="@color/green"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColorHint="@color/green"
                    />
                <EditText
                    android:id="@+id/edt_petage"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/rectangle_corner"
                    android:textSize="14sp"
                    android:fontFamily="@font/futuramediumbt"
                    android:hint="@string/pet_age"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:textColor="@color/green"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColorHint="@color/green"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/vaccinated"
                        android:textSize="16sp"
                        android:fontFamily="@font/futuramediumbt"
                        android:gravity="center"/>
                    <RadioGroup
                        android:id="@+id/rgvaccinated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/yes"
                            android:fontFamily="@font/futuramediumbt"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/no"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/futuramediumbt"
                            android:layout_marginStart="10dp" />

                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llpetlastvaccinatedagedate"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:textColor="@color/green"
                        android:fontFamily="@font/futuramediumbt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pet_last_vaccinated_age"
                        android:textSize="16sp"/>
                    <RelativeLayout
                        android:id="@+id/rlpetlastvaccinatedagedate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_corner"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txt_petlastvaccinatedage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:hint="@string/select_date"
                            android:textSize="16sp"
                            android:fontFamily="@font/futuramediumbt"
                            android:textColorHint="@color/green" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/calender"
                            android:layout_alignParentEnd="true"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:text="Submit"
            android:textColor="@color/whiteFive"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:fontFamily="@font/futur"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


</RelativeLayout>