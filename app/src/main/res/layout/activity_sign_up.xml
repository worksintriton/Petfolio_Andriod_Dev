<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futur"
            android:text="@string/sign_up"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/txt_usertypes"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/futur"
                    android:text="@string/usertypes"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <Button
                        android:id="@+id/btn_changeusertype"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:text="@string/change_user_type"
                        android:background="@drawable/button_capsule"
                        android:textColor="@color/white"
                        android:fontFamily="@font/futur"
                        android:textSize="14sp"
                        android:textAllCaps="false"/>
                </RelativeLayout>

            </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginStart="30dp"
             android:layout_marginEnd="30dp"
             android:layout_marginTop="20dp">
             <EditText
                 android:id="@+id/edt_firstname"
                 android:layout_marginTop="5dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="15dp"
                 android:background="@drawable/rectangle_corner"
                 android:textSize="14sp"
                 android:fontFamily="@font/futur"
                 android:hint="@string/first_name"
                 tools:ignore="Autofill,LabelFor"
                 android:textColor="@color/green"
                 android:inputType="text" />
             <EditText
                 android:id="@+id/edt_lastname"
                 android:layout_marginTop="15dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="15dp"
                 android:background="@drawable/rectangle_corner"
                 android:textSize="14sp"
                 android:fontFamily="@font/futur"
                 android:hint="@string/last_name"
                 tools:ignore="Autofill,LabelFor"
                 android:textColor="@color/green"
                 android:inputType="text"
                 />
             <EditText
                 android:id="@+id/edt_email"
                 android:layout_marginTop="15dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="15dp"
                 android:background="@drawable/rectangle_corner"
                 android:textSize="14sp"
                 android:fontFamily="@font/futur"
                 android:hint="@string/email"
                 tools:ignore="Autofill,LabelFor,TextFields"
                 android:textColor="@color/green"
                 android:inputType="text"
                 />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:background="@drawable/rectangle_corner"
                 android:layout_marginTop="15dp">
                 <EditText
                     android:id="@+id/edt_phone"
                     android:layout_width="240dp"
                     android:layout_height="wrap_content"
                     android:padding="15dp"
                     android:textSize="14sp"
                     android:fontFamily="@font/futur"
                     android:hint="@string/phone"
                     tools:ignore="Autofill,LabelFor"
                     android:textColor="@color/green"
                     android:inputType="phone"
                     android:background="@null" />



                     <TextView
                         android:id="@+id/txt_country_code"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:background="@drawable/textview_rectangle_corner_bg_gray"
                         android:fontFamily="@font/futur"
                         android:gravity="center"
                         android:padding="10dp"
                         android:text="@string/ind"
                         android:textColor="@color/white"
                         android:textSize="16sp" />


             </LinearLayout>


         </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:text="Continue"
            android:textColor="@color/whiteFive"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:fontFamily="@font/futur"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


</RelativeLayout>