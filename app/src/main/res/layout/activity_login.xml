<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.LoginActivity">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_loginheader"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/services"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/edt_emailorphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rectangle_corner"
            android:fontFamily="@font/futuramediumbt"
            android:hint="@string/emailorphonenumber"
            android:inputType="textWebEmailAddress"
            android:padding="15dp"
            android:textColor="@color/green_color"
            android:textColorHint="@color/green_color"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor,TextFields"
            android:imeOptions="actionDone"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futuramediumbt"
                android:textSize="16sp"
                android:text="@string/new_here"/>

            <TextView
                android:id="@+id/txt_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/sign_up"
                android:textColor="@color/green_color"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_verifyotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_curve"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textColor="@color/whiteFive"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>