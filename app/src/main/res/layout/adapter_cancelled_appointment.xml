<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_currappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_dr"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_dr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/image_thumbnail" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_drname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/cv_dr"
                android:layout_toRightOf="@id/cv_dr"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/doctor_name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txt_servname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_drname"
                android:layout_alignStart="@id/txt_drname"
                android:layout_alignLeft="@id/txt_drname"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/service_name_pet_name"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/txt_servname"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/green_bgm_border"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/chat"
                android:visibility="invisible"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_chat"
                android:layout_alignStart="@id/txt_servname"
                android:layout_alignLeft="@id/txt_servname"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"/>


            <TextView
                android:id="@+id/txt_cancel_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_dr"
                android:layout_alignStart="@id/cv_dr"
                android:layout_alignLeft="@id/cv_dr"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/cancel_appointment_date"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>