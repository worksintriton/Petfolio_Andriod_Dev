<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdvw_newappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_pet_imge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/image_thumbnail" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_petname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/cv_pet"
                android:layout_toRightOf="@id/cv_pet"
                android:text="@string/pet_name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/futuramediumbt"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txt_pettype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_petname"
                android:layout_alignStart="@id/txt_petname"
                android:layout_alignLeft="@id/txt_petname"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/pet_type"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txt_service_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_pettype"
                android:layout_alignStart="@id/txt_pettype"
                android:layout_alignLeft="@id/txt_pettype"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/serv_name"
                android:ellipsize="end"
                android:maxLines="1"/>


            <TextView
                android:id="@+id/txt_missed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_service_info"
                android:layout_alignStart="@id/cv_pet"
                android:layout_alignLeft="@id/cv_pet"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/missed_on_date"
                android:textColor="@color/missed_red"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>